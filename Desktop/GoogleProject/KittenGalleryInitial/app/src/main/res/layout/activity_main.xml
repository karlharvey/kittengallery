<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.karlharvey.kittengallery.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/main_header"
        android:id="@+id/main_header"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp"
        android:typeface="sans" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/catOne"
        android:layout_below="@+id/main_header"
        android:layout_alignStart="@+id/main_header"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/catTwo"
        android:layout_alignTop="@+id/catOne"
        android:layout_alignEnd="@+id/main_header"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/catThree"
        android:layout_below="@+id/catOne"
        android:layout_alignStart="@+id/catOne"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/catFour"
        android:layout_below="@+id/catTwo"
        android:layout_alignStart="@+id/catTwo"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/catFive"
        android:layout_below="@+id/catFour"
        android:layout_alignStart="@+id/catThree" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/catSix"
        android:layout_alignBottom="@+id/catFive"
        android:layout_alignStart="@+id/catFour" />

</RelativeLayout>
